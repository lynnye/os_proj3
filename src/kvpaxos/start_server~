#!/usr/bin/python

import os
import sys
import json
import urllib2
import time

def start_server(nodeID):
	
	pid = os.fork()
	if pid == 0:
		os.execl("server", nodeID)
		sys.exit(0)
	time.sleep(0.01)
	sys.exit(0)

if __name__ == "__main__":
	if len(sys.argv) == 2:
		start_server(sys.argv[1])

	print "Please specify the argument: <node id>"

